{
  "name": "bufy",
  "version": "0.0.2",
  "description": "Library that maps buffers to objects and back",
  "main": "dist/index.js",
  "scripts": {
    "coverage": "nyc mocha && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage",
    "test": "mocha",
    "build": "tsc",
    "tsc:w": "tsc -w --pretty true",
    "lint": "tslint src/**/*.ts src/*.ts test/*.ts --config tslint.yaml --fix"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "codacy-coverage": "^3.4.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "author": "SirMomster",
  "license": "MIT",
  "repository": "https://github.com/SirMomster/bufy",
  "dependencies": {},
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
